{
  "name": "Microsoft Docs/Learn GitHub comment minimizer",
  "short_name": "GHMinimizer",
  "description": "If several bots fight for attention in your GitHub pull requests, this will allow you to hide all old comments as outdated.",
  "version": "0.2.0",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "extension-popup.html",
    "default_icon": {
      "16": "images/github-comment-minimizer-icon16.png",
      "32": "images/github-comment-minimizer-icon32.png",
      "48": "images/github-comment-minimizer-icon48.png",
      "128": "images/github-comment-minimizer-icon128.png"
    }
  },
  "icons": {
    "16": "images/github-comment-minimizer-icon16.png",
    "32": "images/github-comment-minimizer-icon32.png",
    "48": "images/github-comment-minimizer-icon48.png",
    "128": "images/github-comment-minimizer-icon128.png"
},
  "manifest_version": 2
}
